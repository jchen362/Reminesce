<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@drawable/yellow_border">


    <ImageView
        android:id="@+id/memoryFrag2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textRare2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/memoryFrag2"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/justanotherhandregular"
        android:gravity="center"
        android:text="@string/Rarity_Level"
        android:textColor="@color/golden"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <!-- Text: "example sentence" -->
    <TextView
        android:id="@+id/textCaption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRare2"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/justanotherhandregular"
        android:gravity="center"
        android:text="example sentence that can be replaced."
        android:textColor="@color/golden"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/rarityImg2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/textCaption2"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/x_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="24dp"
        android:text="@string/x"
        android:textColor="@color/golden"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
